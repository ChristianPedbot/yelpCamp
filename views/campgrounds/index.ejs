<% layout('boilerplate.ejs') %>
<h1>Lista de Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<% campgrounds.forEach(campground => { %>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%=campground.image%>" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
              <p class="card-text"><small class="text-body-secondary"><%=campground.location%></small></p>
              <a class="btn btn-primary" href="/campgrounds/<%=campground.id%>">View Campground</a>
            </div>
          </div>
        </div>
      </div>
<% }) %>

